{
  "$schema": "https://railway.com/railway.schema.json",
  "services": [
    {
      "name": "app",
      "rootDir": ".",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "npm start",
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    {
      "name": "deadline-checker",
      "rootDir": ".",
      "deploy": {
        "startCommand": "node deadlineChecker.js",
        "schedule": "*/5 * * * *"
      }
    }
  ]
}